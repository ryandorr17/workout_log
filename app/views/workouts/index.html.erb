

<%#= link_to "Dashboard", dashboard_path %>

    <h1>Logged Workouts</h1>
    <div class ="btn span2 offset9"><%= link_to 'New Workout', new_workout_path %></div>
</br></br>


<table class="table">
  <tr>
    <th>Name</th>
    <th>Time Since</th>
    <th>Workout date</th>
    <th>Workout type</th>
    <th>Distance</th>
    <th>Duration</th>
    <th>Location</th>
    <th>Unit</th>
    <th>Subtype</th>
    
    <th>Comments</th>
    
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workouts.each do |workout| %>
  <tr>
    <td><%= workout.name %></td>
    <td><%= time_ago_in_words(workout.created_at) %></td>
    <td><%= workout.workout_date %></td>
    <td><%= workout.workout_type %></td>
    <td><%= workout.distance %></td>
    <td><%= workout.duration.strftime("%H:%M:%S") %></td>
    <td><%= workout.location %></td>
    <td><%= workout.unit %></td>
    <td><%= workout.subtype %></td>
    
    <td><%= workout.comments %></td>
    
    <td><%= link_to 'Show Workout', workout %></li></td>
    <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
    <td><%= link_to 'Delete', workout, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


